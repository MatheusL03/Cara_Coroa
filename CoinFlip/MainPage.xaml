<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinFlip.MainPage">

    <ScrollView>
        <VerticalStackLayout
    Padding="30,0"
    Spacing="25">

            <Label 
        Text="CARA OU COROA" 
        SemanticProperties.HeadingLevel="Level1"  
        TextColor="Black" 
        FontAttributes="Bold"/>

            <Image  
        x:Name="imgMoeda" 
        HorizontalOptions="Center" 
        VerticalOptions="Center"
        WidthRequest="150"/>


            <Picker x:Name="Sidespicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}" >
                        <x:String>Cara</x:String>
                        <x:String>Coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


            <Button 
        x:Name="SortearBtn" 
        Text="SORTEAR"  
        HorizontalOptions="Center"  
        Padding="30,0,30,0" 
        BackgroundColor="Black" 
        Margin="40" 
        Clicked="SortearBtn_Clicked"/>

            <Label 
        Text="" 
        x:Name="ResulLabel"  
        SemanticProperties.HeadingLevel="Level2" 
        FontAttributes="Bold"  
        TextColor="Black" 
        FontSize="40"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
